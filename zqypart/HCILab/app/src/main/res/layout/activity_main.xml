<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/obutton"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="160dp"
        android:text="OpenPDF"
        app:layout_constraintBottom_toTopOf="@+id/cbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <Button
        android:id="@+id/cbutton"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:text="Connect"
        app:layout_constraintBottom_toTopOf="@+id/sbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/obutton" />

    <Button
        android:id="@+id/sbutton"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="160dp"
        android:layout_marginTop="24dp"
        android:text="Setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbutton" />
</android.support.constraint.ConstraintLayout>